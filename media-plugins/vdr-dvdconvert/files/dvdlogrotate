# $Header: /usr/local/ssd/gentoo-x86/output/media-plugins/cvs-repo/gentoo-x86/media-plugins/vdr-dvdconvert/files/dvdlogrotate,v 1.1 2007/01/07 01:29:35 hd_brummy Exp $

/var/log/dvdconvert/dvd2vdr.log {
    compress
    dateext
    maxage 365
    rotate 99
    size=+4096k
    notifempty
    missingok
    copytruncate
}
/var/log/dvdconvert/dvd2dvd.log {
    compress
    dateext
    maxage 365
    rotate 99
    size=+4096k
    notifempty
    missingok
    copytruncate
}
