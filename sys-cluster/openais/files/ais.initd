AISEXEC=/usr/sbin/aisexec

depend() {
    need net
    use logger dns
}

start() {
    ebegin "Starting ${SVCNAME}"
    start-stop-daemon --start --exec ${AISEXEC}
    eend $?
}

stop() {
    ebegin "Stopping ${SVCNAME}"
    start-stop-daemon --stop --exec ${AISEXEC}
    eend $?
}
