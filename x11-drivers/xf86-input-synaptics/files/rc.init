depend() {
	use localmount
}

start() {
	ebegin "Starting syndaemon"
	/usr/bin/syndaemon ${SYNDAEMON_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping syndaemon"
	kill `cat /var/run/syndaemon.pid`
	eend $?
}
