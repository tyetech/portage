depend() {
	need net jabber-server
}

start() {
	ebegin "Starting Jabber GG Transport"
	start-stop-daemon --start --user jabber --group jabber --exec /usr/sbin/jggtrans -- -u jabber -g jabber /etc/jabber/gg-transport.xml
	eend $?
}

stop() {
	ebegin "Stopping Jabber GG Transport"
	start-stop-daemon --stop --pidfile /var/run/jabber/gg-transport.pid
	eend $?
}
