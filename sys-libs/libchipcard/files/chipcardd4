# $Header: /usr/local/ssd/gentoo-x86/output/sys-libs/cvs-repo/gentoo-x86/sys-libs/libchipcard/files/Attic/chipcardd4,v 1.3 2010/01/07 10:40:19 ssuominen Exp $

depend() {
    need hald
}

start() {
    ebegin "Starting chipcard4 daemon"
    start-stop-daemon --start --quiet --exec /usr/sbin/chipcardd4
    eend $?
}

stop() {
    ebegin "Stopping chipcard4 daemon"
    start-stop-daemon --stop --quiet --exec /usr/sbin/chipcardd4
    eend $?
}
