depend() {
	need net
	use postgresql
}

start() {
	ebegin "Starting pgpool"
	start-stop-daemon --start --quiet --exec /usr/bin/pgpool
	result=$?
	eend $result
}

stop() {
	ebegin "Stopping pgpool"
	start-stop-daemon --stop --quiet --pidfile /var/run/pgpool.pid
	result=$?
	eend $result
}
