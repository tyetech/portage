depend() {
	need net upsdrv
	before upsmon
}

start() {
	ebegin "Starting upsd"
	start-stop-daemon --start --quiet --startas /usr/sbin/upsd \
		--pidfile=/var/lib/nut/upsd.pid
	eend $?
}

stop() {
	ebegin "Stopping upsd"
	start-stop-daemon --stop --quiet --pidfile=/var/lib/nut/upsd.pid
	eend $?
}
