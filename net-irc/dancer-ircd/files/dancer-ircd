depend() {
	use net
}

start() {
	ebegin "Starting dancer-ircd"
	start-stop-daemon --start --quiet --exec /usr/bin/dancer-ircd
	eend $?
}

stop() {
	ebegin "Stopping dancer-ircd"
	start-stop-daemon --stop --quiet --pidfile /var/run/dancer-ircd.pid
	eend $?
}
